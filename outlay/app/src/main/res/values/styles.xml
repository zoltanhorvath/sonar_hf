<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Outlay.Basic" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <!-- DISABLE MULTITOUCH -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="Theme.Outlay.Translucent.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="colorPrimary">@color/theme.dark.primary</item>
        <item name="colorPrimaryDark">@color/theme.dark.primary_dark</item>
        <item name="colorAccent">@color/theme.dark.accent</item>
        <item name="backgroundColor">@color/theme.dark.background</item>
        <item name="backgroundDarkColor">@color/theme.dark.background_dark</item>
        <item name="textColorPrimary">@color/theme.dark.text_primary</item>
        <item name="textColorSecondary">@color/theme.dark.text_secondary</item>
        <item name="textColorDisabled">@color/theme.dark.text_disabled</item>

        <item name="android:textColorPrimary">@color/theme.dark.text_primary</item>
        <item name="android:textColorSecondary">@color/theme.dark.text_secondary</item>
        <item name="android:textColorHint">@color/theme.dark.text_disabled</item>
    </style>

    <style name="Theme.Outlay.Translucent.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorPrimary">@color/theme.light.primary</item>
        <item name="colorPrimaryDark">@color/theme.light.primary_dark</item>
        <item name="colorAccent">@color/theme.light.accent</item>
        <item name="backgroundColor">@color/theme.light.background</item>
        <item name="backgroundDarkColor">@color/theme.light.background_dark</item>
        <item name="textColorPrimary">@color/theme.light.text_primary</item>
        <item name="textColorSecondary">@color/theme.light.text_secondary</item>
        <item name="textColorDisabled">@color/theme.light.text_disabled</item>
    </style>


    <style name="Theme.Outlay.Dark" parent="Theme.Outlay.Basic">
        <item name="colorPrimary">@color/theme.dark.primary</item>
        <item name="colorPrimaryDark">@color/theme.dark.primary_dark</item>
        <item name="colorAccent">@color/theme.dark.accent</item>
        <item name="android:actionModeBackground">@color/theme.dark.primary_dark</item>
        <!-- DRAWER -->
        <item name="material_drawer_background">@color/theme.dark.background</item>
        <item name="material_drawer_primary_text">@color/theme.dark.text_primary</item>
        <item name="material_drawer_primary_icon">@color/theme.dark.icon_active</item>
        <item name="material_drawer_selected_text">@color/theme.dark.text_primary</item>


        <!-- CUSTOM ATTRIBUTES -->
        <item name="backgroundColor">@color/theme.dark.background</item>
        <item name="backgroundDarkColor">@color/theme.dark.background_dark</item>
        <item name="activeIconColor">@color/theme.dark.icon_active</item>
        <item name="inactiveIconColor">@color/theme.dark.icon_inactive</item>
        <item name="textColorPrimary">@color/theme.dark.text_primary</item>
        <item name="textColorSecondary">@color/theme.dark.text_secondary</item>
        <item name="textColorDisabled">@color/theme.dark.text_disabled</item>
        <item name="numpadButton">@style/NumpadButtonDark</item>
        <item name="progressColor">@color/theme.dark.progress</item>

        <item name="android:textColorPrimary">@color/theme.dark.text_primary</item>
        <item name="android:textColorSecondary">@color/theme.dark.text_secondary</item>
        <item name="android:textColorHint">@color/theme.dark.text_disabled</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="divider">@color/theme.dark.divider</item>
    </style>


    <style name="Theme.Outlay.Light" parent="Theme.Outlay.Basic">
        <item name="colorPrimary">@color/theme.light.primary</item>
        <item name="colorPrimaryDark">@color/theme.light.primary_dark</item>
        <item name="colorAccent">@color/theme.light.accent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:actionModeBackground">@color/theme.light.primary_dark</item>
        <!-- DRAWER -->
        <item name="material_drawer_background">@color/theme.light.background</item>
        <item name="material_drawer_primary_text">@color/theme.light.text_primary</item>
        <item name="material_drawer_primary_icon">@color/theme.light.icon_active</item>
        <item name="material_drawer_selected_text">@color/theme.light.text_primary</item>


        <!-- CUSTOM ATTRIBUTES -->
        <item name="backgroundColor">@color/theme.light.background</item>
        <item name="backgroundDarkColor">@color/theme.light.background_dark</item>
        <item name="activeIconColor">@color/theme.light.icon_active</item>
        <item name="inactiveIconColor">@color/theme.light.icon_inactive</item>
        <item name="textColorPrimary">@color/theme.light.text_primary</item>
        <item name="textColorSecondary">@color/theme.light.text_secondary</item>
        <item name="textColorDisabled">@color/theme.light.text_disabled</item>
        <item name="numpadButton">@style/NumpadButtonLight</item>
        <item name="progressColor">@color/theme.light.progress</item>

        <item name="android:textColorPrimary">@color/theme.light.text_primary</item>
        <item name="android:textColorSecondary">@color/theme.light.text_secondary</item>
        <item name="android:textColorHint">@color/theme.light.text_disabled</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="divider">@color/theme.light.divider</item>
    </style>


    <style name="NumpadButtonLight">
        <item name="numpadButtonTextColor">@color/theme.light.text_secondary</item>
    </style>

    <style name="NumpadButtonDark">
        <item name="numpadButtonTextColor">@color/theme.dark.accent</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>


    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="met_floatingLabel">highlight</item>
        <item name="met_textColorHint">?attr/textColorSecondary</item>
        <item name="met_textColor">?attr/textColorPrimary</item>
        <item name="met_baseColor">?attr/textColorPrimary</item>
        <item name="met_primaryColor">?attr/colorAccent</item>
    </style>

    <style name="MyOverlayTheme" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/highlight</item>
    </style>

</resources>
