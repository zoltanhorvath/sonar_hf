<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expenseContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_tiny"
    android:background="@color/dark"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.github.johnkil.print.PrintView
            android:id="@+id/categoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_very_small"
            app:iconColor="@color/highlight"
            app:iconSize="@dimen/expense_category_icon" />

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_very_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/categoryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/categoryAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_expense_amount" />

    <TextView
        android:id="@+id/categoryNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>